<header class="header-area header-style-1 header-height-2">
    <div class="header-top header-top-ptb-1 d-none d-lg-block">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-3 col-lg-4">
                    <div class="header-info">
                        
                    </div>
                </div>
                <div class="col-xl-6 col-lg-4">
                    <div class="text-center">
                        <div id="news-flash" class="d-inline-block">
                            
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-4">
                    <div class="header-info header-info-right">
                        <ul>
                            <% if (loggedIn) { %>
                                <li>
                                    <a href="/user-profile">Account</a>
                                </li>
                                <li>
                                    <a href="/logout">Logout</a>
                                </li>
                            <% } else { %>
                                <li>
                                    <a href="/get-login">Log In</a>
                                </li>
                                <li>
                                    <a href="/signup">Sign Up</a>
                                </li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Mobile Header -->
    <div class="header-mobile d-block d-lg-none py-2 px-3 bg-white border-bottom">
        <div class="d-flex justify-content-between align-items-center">
            <a href="/"><img src="/userassets/logo/logo.png" alt="logo" style="height:40px;"></a>
            <button class="btn btn-link p-0" id="mobileMenuBtn" aria-label="Toggle navigation">
                <span style="font-size: 2rem;">&#9776;</span>
            </button>
        </div>
        <div id="mobileMenu" class="d-none mt-2">
            <ul class="list-unstyled mb-2">
                <li><a href="/" class="d-block py-1">Home</a></li>
                <li><a href="/shop?action=All Products" class="d-block py-1">Shop</a></li>
                <% if (loggedIn) { %>
                    <li><a href="/user-profile" class="d-block py-1">Account</a></li>
                    <li><a href="/logout" class="d-block py-1">Logout</a></li>
                    <% } else { %>
                        <li><a href="/get-login" class="d-block py-1">Log In</a></li>
                        <li><a href="/signup" class="d-block py-1">Sign Up</a></li>
                        <% } %>
                        <li><a href="/gotocart" class="d-block py-1">Cart</a></li>
                    </ul>
                    <form action="#" class="mb-2 autocomplete" style="position:relative;">
    <input type="text" id="searchInputMobile" class="form-control" placeholder="Search for items..." oninput="showDropdownMobile()">
    <div id="autocompleteDropdownMobile" class="autocomplete-dropdown"></div>
</form>
        </div>
    </div>
    <!-- End Mobile Header -->

    <!-- web view -->
    <div class="header-middle header-middle-ptb-1 d-none d-lg-block">
        <div class="container">
            <div class="header-wrap">
                <div class="logo logo-width-1">
                    <a href="/"><img src="/userassets/logo/logo.png" alt="logo"></a>
                </div>
                <div class="header-right">
                    <div class="search-style-2">
                        <form action="#">



                            <input type="text" id="searchInput" placeholder="Search for items..."
                                oninput="showDropdown()">
                            <div id="autocompleteDropdown" class="autocomplete-dropdown"></div>

                        </form>
                    </div>
                    <div class="header-action-right">
                        <div class="header-action-2">

                            <div class="header-action-icon-2">
                                <a class="mini-cart-icon" href="/gotocart">
                                    <img alt="Evara" src="/userassets/imgs/theme/icons/icon-cart.svg">
                                </a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- web view end -->
    <div class="header-bottom header-bottom-bg-color sticky-bar d-none d-lg-block">
        <div class="container">
            <div class="header-wrap header-space-between position-relative">
                <div class="logo logo-width-1 d-block d-lg-none">
                    <a href="/"><img src="/userassets/logo/logo.png" alt="logo"></a>
                </div>
                <div class="header-nav d-none d-lg-flex">
                    <div class="main-categori-wrap d-none d-lg-block">
                        <a class="categori-button-active" style="visibility: hidden;">
                            <span class="fi-rs-apps" style="visibility: hidden;"></span> Browse Categories
                        </a>
                    </div>

                    <!-- shop and Home button -->
                    <div class="main-menu main-menu-padding-1 main-menu-lh-2 d-none d-lg-block">
                        <nav>
                            <ul>
                                <li><a class="active" href="/">Home <i></i></a>
                                 
                                </li>

                                <li><a href="/shop?action=All Products">Shop <i></i></a>

                                </li>


                            </ul>
                        </nav>
                    </div>
                    <!-- shop and Home button-end -->

                    <!--End category  -->
                </div>
            </div>
        </div>
    </div>
</header>

<script>
    // Mobile menu toggle
    document.addEventListener('DOMContentLoaded', function() {
        var btn = document.getElementById('mobileMenuBtn');
        var menu = document.getElementById('mobileMenu');
        if (btn && menu) {
            btn.addEventListener('click', function() {
                menu.classList.toggle('d-none');
            });
        }
    });
// Close the mobile dropdown if the user clicks outside of it
document.addEventListener('click', function (event) {
  const dropdownMobile = document.getElementById('autocompleteDropdownMobile');
  if (dropdownMobile && !event.target.closest('#searchInputMobile') && dropdownMobile.style.display === 'block') {
    dropdownMobile.style.display = 'none';
  }
});





</script>
<script src="/javascripts/user/searchItem.js"></script>
