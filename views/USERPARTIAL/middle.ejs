<style>
    @media (max-width: 991.98px) {
        .header-middle,
        .header-bottom,
        .header-top {
            display: none !important;
        }
        .header-mobile {
            display: block !important;
        }
    }
    @media (min-width: 992px) {
        .header-mobile {
            display: none !important;
        }
    }

    .autocomplete-dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: #fff;
    border: 1px solid #ccc;
    z-index: 9999;
    max-height: 200px;
    overflow-y: auto;
    display: none; /* Will be set to block by JS when needed */
}
.autocomplete-dropdown-item {
    padding: 8px 12px;
    cursor: pointer;
}
.autocomplete-dropdown-item:hover {
    background: #f0f0f0;
}
</style>


