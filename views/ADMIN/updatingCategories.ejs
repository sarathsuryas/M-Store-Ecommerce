        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Edit Category </h2>
                    <p>Edit name and description</p>
                </div>
                <div>
                    <input type="text" placeholder="Search Categories" class="form-control bg-white">
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <!-- Edit form -->
                   
                        <div class="col-md-3">
                            <form action="/admin/updatedcat" method="POST">
                                  
                                <div class="mb-4">
                                    <input type="hidden" name="id" value="<%= details.id %>" id="name">
                                    <label for="product_name" class="form-label">Name</label>
                                    <input type="text" placeholder="Type here" class="form-control" id="product_name" name="categoryname" value="<%= details.categoryName %>" />
                                </div>
                                
                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <textarea placeholder="Type here" class="form-control" name="description" ><%= details.description %></textarea>
                                </div>
                                <div class="d-grid">
                                    <button class="btn btn-primary" type="submit">Update Changes</button>
                                </div>
                            </form>
                        </div>
                        
                       
                    </div> <!-- .row // -->
                </div> <!-- card body .// -->
