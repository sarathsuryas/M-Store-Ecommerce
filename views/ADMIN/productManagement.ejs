        </footer>
    </main>


    
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
    async function published(productId,isListed){
        try{
            const response = await fetch(`/admin/productpublish/${productId}`,{
              method:'PUT',
              headers:{
                'Content-Type':'application-json'
              },
              body: JSON.stringify({isListed})
            })
            .then((res) =>res.json())
            .then((data)=>{
             if(data.success){
              swal({
                title: 'Good Job',
                  text: 'You Clicked the Button',
                    icon:'success' 
              })
        window.location.reload()
       }else{
        alert(data.message)
       } 
    })
    .catch((error)=>{
        console.log(error);
        alert('There is an error')
    })
    }catch(error){
    console.error('Error updating block status:',error)
  }
}

function publish(productId){
    published(productId,true)
}

async function unPublished(productId,isListed){
        try{
            const response = await fetch(`/admin/productpublish/${productId}`,{
              method:'PUT',
              headers:{
                'Content-Type':'application-json'
              },
              body: JSON.stringify({isListed})
            })
            .then((res) =>res.json())
            .then((data)=>{
             if(data.success){
              swal({
                 title:'Good Job',
                 text:'You Clicked the Button',
                icon:'success' 
                   })
        window.location.reload()
       }else{
        alert(data.message)
       } 
    })
    .catch((error)=>{
        console.log(error);
        alert('There is an error')
    })
    }catch(error){
    console.error('Error updating block status:',error)
  }
}

function unPublish(productId){
unPublished(productId,false)
}

</script>
        
