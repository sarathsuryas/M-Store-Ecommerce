<%- include('../ADMIN/ADMINPARTIAL/header') %>

    <%- include('../ADMIN/ADMINPARTIAL/middle') %>


        <main class="main-wrap">
            <header class="main-header navbar">
                <div class="col-search">

                </div>
                <div class="col-nav">
                    <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"> <i
                            class="material-icons md-apps"></i> </button>
                    <ul class="nav">

                        <li class="nav-item">
                            <a class="nav-link btn-icon darkmode" href="#"> <i
                                    class="material-icons md-nights_stay"></i> </a>
                        </li>

                        <li class="dropdown nav-item">

                            <a class="dropdown-item text-danger" href="/admin/logOut"><i
                                    class="material-icons md-exit_to_app"></i>Logout</a>
                </div>
                </li>
                </ul>
                </div>
            </header>
            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title">Product</h2>
                        <p>Add, edit or delete a product</p>
                    </div>
                    <div>

                    </div>
                </div>
                <!-- product list -->
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover" id="product-table">
                                <thead class="table-dark">
                                    <tr>
                                        <th class="text-center">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value=""
                                                    style="visibility: hidden;" />
                                            </div> -
                                        </th>
                                        <th>IMG</th>
                                        <th style="min-width: 150px;">Product Name</th>
                                        <th>Category</th>
                                        <th>Price</th>
                                        <th>Stock</th>
                                        <th>Discount</th>
                                        <th>Status</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <% products.forEach((product)=> { %>
                                        <tr>
                                            <td class="text-center">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" value=""
                                                        style="visibility: hidden;" />
                                                </div>
                                            </td>

                                            <td class="align-middle">
                                                <!-- Display product image -->
                                                <img src="<%= product.coverImage %>" alt="Product Image"
                                                    class="img-thumbnail" style="max-width: 100px; max-height: 100px;">
                                            </td>

                                            <td class="align-middle"
                                                style="max-width: 150px; overflow: hidden; text-overflow: ellipsis;">
                                                <%= product.title %>
                                            </td>
                                            <td class="align-middle"><b>
                                                    <%= product.category.categoryName %>
                                                </b></td>
                                            <td class="align-middle">
                                                <%= product.price %>
                                            </td>
                                            <td class="align-middle">
                                                <%= product.stock %>
                                            </td>
                                            <td class="align-middle">
                                                <%= product.discount %>
                                            </td>
                                            <td class="align-middle">
                                                <% if(product.isListed===true) { %>
                                                    <span class="badge bg-success">Published</span>
                                                    <% } else { %>
                                                        <span class="badge bg-secondary">Unpublished</span>
                                                        <% } %>
                                            </td>
                                            <td class="text-end align-middle">
                                                <div class="btn-group">
                                                    <a href="/admin/editproduct/<%= product.id %>"
                                                        class="btn btn-info btn-sm">Edit</a>
                                                    <% if(product.isListed===true) { %>
                                                        <button class="btn btn-danger btn-sm"
                                                            onclick="unPublish('<%= product.id %>')">Unpublish</button>
                                                        <% } else { %>
                                                            <button class="btn btn-success btn-sm"
                                                                onclick="publish('<%= product.id %>')">Publish</button>
                                                            <% } %>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- pagination  -->

                <div class="page-buttons">
                    <p>Pages</p>
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <% for (let i=1; i <=totalPages; i++) { %>
                                <% if (i===page) { %>
                                    <li class="page-item active" aria-current="page">
                                        <span class="page-link">
                                            <%= i %>
                                        </span>
                                    </li>
                                    <% } else { %>
                                        <li class="page-item">
                                            <a class="page-link" href="/admin/productmanagement?page=<%= i %>">
                                                <%= i %>
                                            </a>
                                        </li>
                                        <% } %>
                                            <% } %>
                        </ul>
                    </nav>
                </div>

                <br />

                <!-- pagination ends here -->

                <!-- end -->

            </section> <!-- content-main end// -->

            <!-- card end// -->
            <footer class="main-footer font-xs">
                <div class="row pb-30 pt-15">
                    <div class="col-sm-6">
                        <script>
                            document.write(new Date().getFullYear())
                        </script> M Store.
                    </div>
                    <div class="col-sm-6">
                        <div class="text-sm-end">
                            All rights reserved
                        </div>
                    </div>
                </div>
            </footer>
        </main>



        <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

        <script>
            async function published(productId, isListed) {
                try {
                    const response = await fetch(`/admin/productpublish/${productId}`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application-json'
                        },
                        body: JSON.stringify({ isListed })
                    })
                        .then((res) => res.json())
                        .then((data) => {
                            if (data.success) {
                                swal({
                                    title: 'Good Job',
                                    text: 'You Clicked the Button',
                                    icon: 'success'
                                })
                                window.location.reload()
                            } else {
                                alert(data.message)
                            }
                        })
                        .catch((error) => {
                            console.log(error);
                            alert('There is an error')
                        })
                } catch (error) {
                    console.error('Error updating block status:', error)
                }
            }

            function publish(productId) {
                published(productId, true)
            }

            async function unPublished(productId, isListed) {
                try {
                    const response = await fetch(`/admin/productpublish/${productId}`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application-json'
                        },
                        body: JSON.stringify({ isListed })
                    })
                        .then((res) => res.json())
                        .then((data) => {
                            if (data.success) {
                                swal({
                                    title: 'Good Job',
                                    text: 'You Clicked the Button',
                                    icon: 'success'
                                })
                                window.location.reload()
                            } else {
                                alert(data.message)
                            }
                        })
                        .catch((error) => {
                            console.log(error);
                            alert('There is an error')
                        })
                } catch (error) {
                    console.error('Error updating block status:', error)
                }
            }

            function unPublish(productId) {
                unPublished(productId, false)
            }

        </script>

        <%- include('../ADMIN/ADMINPARTIAL/footer') %>