    <section>

        <!-- notification -->
        <div id="notification" style="display: none;">
            Product added to cart!
        </div>
        
        <style>
            #notification {
                display: none;
                position: fixed;
                top: 20px; /* Adjust to 20px from the top */
                left: 50%; /* Center horizontally */
                transform: translate(-50%, -50%); /* Center vertically and horizontally */
                padding: 10px;
                background-color: #4CAF50;
                color: white;
                border-radius: 5px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                z-index: 1000; /* Set a high z-index value */
            }
        
            
        </style>
        
        <!-- spinner -->
        <style>
        
        #addToCartBtn {
        position: relative;
        }
        
        #addToCartBtn.loading:after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border: 4px solid #fff;
        border-radius: 50%;
        border-top: 4px solid #3498db;
        width: 20px;
        height: 20px;
        animation: spin 1s linear infinite;
        }
        
        @keyframes spin {
        0% { transform: translate(-50%, -50%) rotate(0deg); }
        100% { transform: translate(-50%, -50%) rotate(360deg); }
        }
        
        </style>
        
        
        
        <!-- add to cart -->
        
        
        <script>
            async function addToCart(productId) {
                const button = document.getElementById('addToCartBtn');
            
                try {
                    // Add a loading state to the button
                    button.classList.add('loading');
            
                    const response = await fetch('/addtocart', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ productId, quantity: 1 }),
                        credentials: 'include',
                    });
            
                    if (!response.ok) {
                        console.error('Error adding product to cart:', response.status);
                        return;
                    }
            
                    const result = await response.json();
                    console.log('Product added to cart:', result);
            
                    // Show the notification
                    showNotification();
                } catch (error) {
                    console.error('Error:', error);
                } finally {
                    // Remove the loading state from the button
                    button.classList.remove('loading');
                }
            }
            
            function showNotification() {
                const notificationDiv = document.getElementById('notification');
            
                // Check if the notificationDiv exists
                if (notificationDiv) {
                    // Show the notification
                    notificationDiv.style.display = 'block';
            
                    // Hide the notification after a few seconds (adjust the timeout as needed)
                    setTimeout(() => {
                        notificationDiv.style.display = 'none';
                    }, 3000); // Hide after 3 seconds
                } else {
                    console.error('Notification div not found');
                }
            }
            </script>
        
        
        
        </section>


   
