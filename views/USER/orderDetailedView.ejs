<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Details - #<%= order.orderId %>
  </title>
  <link rel="stylesheet" href="/userassets/css/orderDetailedView.css">
  <link rel="shortcut icon" type="image/x-icon" href="/userassets/imgs/theme/favicon.svg">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #f8f9fa;
    }

    .order-header {
      background: #fff;
      border-radius: 0.5rem;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.03);
      padding: 1.5rem 2rem;
      margin-bottom: 2rem;
    }

    .order-status {
      font-size: 1rem;
      font-weight: 500;
      padding: 0.4em 1em;
    }

    .product-img {
      width: 50px;
      height: 50px;
      object-fit: cover;
      border-radius: 0.25rem;
      border: 1px solid #eee;
    }

    .table th,
    .table td {
      vertical-align: middle;
    }

    .card {
      border-radius: 0.5rem;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.03);
    }

    .btn-return,
    .btn-cancel {
      font-size: 0.95rem;
      padding: 0.25rem 1rem;
      border-radius: 1rem;
    }

    .btn-return {
      color: #fff;
      background: #198754;
      border: none;
    }

    .btn-cancel {
      color: #fff;
      background: #dc3545;
      border: none;
    }

    @media (max-width: 767.98px) {
      .order-header {
        padding: 1rem;
      }

      .card-body {
        padding: 1rem;
      }
    }
  </style>
</head>

<body>
  <div class="container py-4">
    <!-- Order Header -->
    <div class="order-header d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
      <div>
        <h2 class="h5 mb-1">Order #<%= order.orderId %>
        </h2>
        <span class="badge order-status bg-info text-dark">
          <%= order.orderStatus %>
        </span>
      </div>
      <div class="mt-3 mt-md-0 d-flex align-items-center gap-3">
        <button class="btn btn-outline-success btn-sm" onclick="downloadInvoiceExcel()">
          <i class="bi bi-file-earmark-excel"></i> Download Invoice (Excel)
        </button>
        <button class="btn btn-outline-secondary btn-sm" onclick="printPdf()">
          <i class="bi bi-printer"></i> Print
        </button>
      </div>
    </div>

    <div class="row g-4">
      <!-- Order Details -->
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-header bg-white border-bottom-0">
            <h5 class="mb-0">Order Items</h5>
          </div>
          <div class="card-body">
            <table class="table align-middle">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Qty</th>
                  <th>Status</th>
                  <th class="text-end">Total</th>
                </tr>
              </thead>
              <tbody>
                <% order.products.forEach(item=> { %>
                  <tr>
                    <td>
                      <div class="d-flex align-items-center">
                        <img src="<%= item.productId.coverImage %>" alt="" class="product-img me-3">
                        <div>
                          <div class="fw-bold">
                            <%= item.productId.title %>
                          </div>
                          <div class="text-muted small">Color: Black</div>
                        </div>
                      </div>
                    </td>
                    <td>
                      <%= item.quantity %>
                    </td>
                    <td>
                      <% if(order.orderStatus==="Delivered") { %>
                        <button class="btn btn-return btn-sm">Return</button>
                        <% } else if(item.cancelStatus===false) { %>
                          <!-- <button class="btn btn-cancel btn-sm"
                            onclick="cancelIndividualOrder('<%= item._id %>','<%= order.id %>','<%= item.productId._id %>','<%= item.quantity %>','<%= order.couponCode %>')">
                            Cancel
                          </button> -->
                          <button class="btn btn-cancel btn-sm"
                            onclick="cancelIndividualOrder('<%= item._id %>', '<%= order.id %>', '<%= item.productId._id %>', '<%= item.quantity %>', '<%= order.couponCode %>')"
                            <%=order.paymentStatus==='Failed' ? 'disabled' : '' %>>
                            Cancel
                          </button>


                          <% } else { %>
                            <span class="badge bg-danger">Cancelled</span>
                            <% } %>
                    </td>
                    <td class="text-end">₹ <%= item.total %>
                    </td>
                  </tr>
                  <% }); %>
              </tbody>
              <tfoot>
                <tr>
                  <td colspan="3" class="text-end">Cart Total</td>
                  <% let value=0; order.products.forEach(item=> { if (!item.cancelStatus) { value +=item.total; } }); %>
                    <td class="text-end fw-bold">₹ <%= value %>
                    </td>
                </tr>
                <tr>
                  <td colspan="3" class="text-end">Shipping</td>
                  <td class="text-end">₹40.00</td>
                </tr>
                <tr>
                  <td colspan="3" class="text-end">Subtotal</td>
                  <td class="text-end">₹ <%= value ? value + 40 : 0 %>
                  </td>
                </tr>
                <tr>
                  <td colspan="3" class="text-end">Discount (Coupon: <%= order.couponCode %>)</td>
                  <td class="text-danger text-end">-₹<%= order.appliedCouponValue %>
                  </td>
                </tr>
                <tr class="fw-bold">
                  <td colspan="3" class="text-end">TOTAL</td>
                  <td class="text-end">₹ <%= value ? value + 40 - order.appliedCouponValue : 0 %>
                  </td>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
        <!-- Payment & Billing -->
        <div class="row g-3">
          <div class="col-md-6">
            <div class="card h-100">
              <div class="card-body">
                <h6 class="mb-2">Payment Method</h6>
                <p class="mb-1">
                  <%= order.paymentMethod %>
                </p>
                <div>
                  <span class="fw-bold">Total:</span>
                  ₹ <%= value ? value + 40 - order.appliedCouponValue : 0 %>
                    <span class="badge bg-success ms-2">
                      <%= order.paymentStatus %>
                    </span>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card h-100">
              <div class="card-body">
                <h6 class="mb-2">Billing Address</h6>
                <address class="mb-0">
                  <strong>
                    <%= order.address.name %>
                  </strong><br>
                  <%= order.address.homeAddress %><br>
                    <abbr title="Phone">Phone:</abbr>
                    <%= order.address.mobile %>
                </address>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Shipping Info -->
      <div class="col-lg-4">
        <div class="card h-100">
          <div class="card-body">
            <h6 class="mb-2">Shipping Information</h6>
            <div class="mb-2">
              <strong>FedEx</strong>
              <span class="ms-2">
                <a href="#" class="text-decoration-underline" target="_blank">FF1234567890</a>
                <i class="bi bi-box-arrow-up-right"></i>
              </span>
            </div>
            <hr>
            <h6 class="mb-2">Shipping Address</h6>
            <address class="mb-0">
              <strong>
                <%= order.address.name %>
              </strong><br>
              <%= order.address.homeAddress %><br>
                <abbr title="Phone">Phone:</abbr>
                <%= order.address.mobile %>
            </address>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script>
    function printPdf() {
      window.print();
    }
  </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.5/xlsx.full.min.js"></script>
  <script>
    function downloadInvoiceExcel() {
      const invoiceData = [
        ["Invoice", "Order #" + "<%= order.orderId %>"],
        ["Status", "<%= order.orderStatus %>"],
        ["Payment Method", "<%= order.paymentMethod %>"],
        ["Payment Status", "<%= order.paymentStatus %>"],
        [""],
        ["Products", "Quantity", "Price"],
        "<% order.products.forEach(item => { %>"
        ["<%= item.productId.title %>", "<%= item.quantity %>", "₹<%= item.total %>"],
        "<% }) %>"
        [""],
        ["Cart Total", "", "₹<%= value %>"],
        ["Shipping", "", "₹40"],
        ["Discount (Coupon: <%= order.couponCode %>)", "", "-₹<%= order.appliedCouponValue %>"],
        ["TOTAL", "", "₹<%= value ? value + 40 - order.appliedCouponValue : 0 %>"],
        [""],
        ["Billing Address"],
        ["<%= order.address.name %>"],
        ["<%= order.address.homeAddress %>"],
        ["Phone: <%= order.address.mobile %>"]
      ];
      const wb = XLSX.utils.book_new();
      const ws = XLSX.utils.aoa_to_sheet(invoiceData);
      XLSX.utils.book_append_sheet(wb, ws, "Invoice");
      XLSX.writeFile(wb, "Invoice_Order_<%= order.orderId %>.xlsx");
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/javascripts/user/cancelIndividualOrder.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</body>

</html>