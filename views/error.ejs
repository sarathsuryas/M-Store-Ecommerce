<!-- error.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error Page</title>
    <style>
      body {
          font-family: Arial, sans-serif;
          text-align: center;
          padding: 20px;
          background-color: #f8f8f8;
      }
      h1 {
          color: #e44d26;
      }
      h2 {
          color: #333;
      }
      pre {
          white-space: pre-wrap;
          background-color: #eee;
          padding: 10px;
          border-radius: 5px;
          overflow-x: auto;
      }
  </style>
  
</head>
<body>
    <h1><%= message %></h1>
    <h2><%= error.status %></h2>
    <pre><%= error.stack %></pre>
</body>
</html>

